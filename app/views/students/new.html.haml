%h1 Create New Student

= form_tag students_path do

	= label :student, :name, 'Name'
	= text_field :student, :name
	= label :student, :studentId, 'Student ID'
	= text_field :student, :studentId
	= label :student, :startLat, 'Start Latitude'
	= text_field :student, :startLat
	= label :student, :startLng, 'Start Longitude'
	= text_field :student, :startLng
	= label :student, :endLat, 'End Latitude'
	= text_field :student, :endLat
	= label :student, :endLng, 'End Longitude'
	= text_field :student, :endLng

	= submit_tag 'Create Student'
